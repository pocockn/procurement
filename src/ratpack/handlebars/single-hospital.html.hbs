{{> header }}
<title>Hospital - {{model.singleHospital.name}}</title>
<div id="page-wrapper" class="page-hospital">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{model.singleHospital.name}}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Employees</th>
                                <th>Address</th>
                                <th>ID</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each model.singleHospital}}
                                <tr class="odd gradeX">
                                    <td><a href="/hospital/{{id}}" id="{{name}}Single">{{name}}</a></td>
                                    <td>{{employees}}</td>
                                    <td>{{address}}</td>
                                    <td>{{id}}</td>
                                    <td>
                                        <form action="/delete/{{id}}" class="deleteHospital" method="post">
                                            <input type="submit" name="delete" value="delete"/>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                        <form action="/api/addProduct" class=" addNewProduct" method="post">
                            <fieldset class="form-group">
                                <label for="title">Product Name</label>
                                <input type="text" class="form-control" id="name" name="productName">
                            </fieldset>
                            <fieldset class="form-group">
                                <label for="title">Quantity</label>
                                <input type="number" class="form-control" id="employees" name="quantity">
                            </fieldset>
                            <fieldset class="form-group">
                                <label for="title">Price</label>
                                <input type="text" class="form-control" id="address" name="price">
                            </fieldset>
                            <input type="submit" name="add" value="add"/>
                        </form>
                        <br/>
                        <a href="/">Back</a>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.panel-body -->
</div>
{{> footer }}
